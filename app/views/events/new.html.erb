<h3 class="text-center m-3 mt-5">Crée ton propre évènement! </h3>

<div class="row justify-content-center">
  <div class="col-5">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="form-group">
        <%= label_tag 'Titre :' %>
        <%= text_field_tag 'title', @title, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= label_tag 'Description:' %>
        <%= text_area_tag 'description', @description, {class: 'form-control'} %>
      </div>

      <div class="form-group">
        <%= label_tag 'Durée :' %>
        <%= text_area_tag 'duration', @duration, {class: 'form-control'} %>
      </div>
      <%# <div class="form-group">
        <%= label_tag 'Author :' %>
        <%# <%= select_tag "user", options_from_collection_for_select(User.all, :id, :first_name), {class: 'form-control', prompt: 'Choose a user'} %>
      <%# </div>  %>
      
      <div class="row justify-content-center">
          <%= submit_tag "Créer l'évènement", {class: 'btn btn-info'} %>
      </div>
    <% end %>
  </div>
</div>
